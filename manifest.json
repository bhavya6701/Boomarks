{
    "manifest_version": 2,
    "name": "Boomarks - Bookmark Manager",
    "version": "1.6",
    "description": "A simple extension to search and manage bookmarks.",
    "permissions": [
        "bookmarks",
        "downloads"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "web_accessible_resources": [
        "manage.html"
    ],
    "content_security_policy": "script-src 'self' https://cdn.tailwindcss.com object-src 'self'"
}